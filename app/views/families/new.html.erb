<h1>New family</h1>

<%= form_for(@family) do |f| %>
  <div class="field">
    <%= f.label :family_code %><br />
    <%= f.text_field :family_code %>
  </div>
  <div class="field">
    <%= f.label :profile %><br />
    <%= f.text_area :profile %>
  </div>
  <div>
    <%= f.label :locationID, "Location" %>
    <select name="family[locationID]">
      <option value="1">Oakland</option>
      <option value="2">Richmond</option>
      <option value="3">Antioch</option>
      <option value="4">Bay Point</option>
    </select>
  </div>
  <div class="field">
    <%= f.label :display %><br />
    <%= f.check_box :display %>
  </div>
  <div class="actions">
    <%= f.submit "Create New Family" %>
  </div>
<% end %>
<%= link_to 'Back', families_path %>
