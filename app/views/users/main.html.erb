<h1>Nearby Families</h1>
<form action="/users/main" method="get">
Filter by family size:
<% @family_sizes.each do |size| %>
  <input type="checkbox" id=<%="family_size_#{size}"%> name="family_size[]" value=<%=size%> <%= checked(size) %> /> <%= size %>
<% end %>
<input type="submit" id="Filter" value="Filter">
<br />
<table id="nearby_families">
   <% @display_families.each do |family| %>
      <tr>
         <td>
           <strong>Family Code:&nbsp;<%= family.family_code %></strong><br />
           <strong>Profile:&nbsp;</strong><%= family.profile %><br />
         </td>
      <tr />
  <% end %>
</table>
<br />

</form>
