<h1>Complete Profile Information</h1>

<%= form_for(@user) do |f| %>
  <div class="field">
    <%= f.label :firstname, "First Name(*)" %><br />
    <%= f.text_field :firstname, :value => session[:user_firstname], :required => true %>
  </div>
  <div class="field">
    <%= f.label :lastname, "Last Name(*)"%><br />
    <%= f.text_field :lastname, :value => session[:user_lastname], :required => true %>
  </div>
  <div class="field">
    <%= f.label :phone, "Primary Phone Number(*)" %><br />
    <%= f.text_field :phone, :required => true %>
  </div>
  <div class="field">
    <%= f.label :address_1, "Address 1(*)" %><br />
    <%= f.text_field :address_1, :required => true %>
  </div>
  <div class="field">
    <%= f.label :address_2, "Address 2" %><br />
    <%= f.text_field :address_2 %>
  </div>
  <div class="field">
    <%= f.label :city, "City(*)" %><br />
    <%= f.text_field :city, :required => true %>
  </div>
  <div class="field">
    <%= f.label :state, "State(*)" %><br />
    <%= f.text_field :state, :required => true %>
  </div>
  <div class="field">
    <%= f.label :zipcode, "Zipcode(*)" %><br />
    <%= f.text_field :zipcode, :required => true %>
  </div>
  <div class="field">
    <%= f.label :email, "Email(*)" %><br />
    <%= f.text_field :email, :value => session[:user_email], :required => true%>
  </div>
  <div class="field">
    <%= f.label :organization %><br />
    <%= f.text_field :organization %>
  </div>
  <div>
    <%= f.label :locationID, "Please select your preferred drop-off location.(*)" %>
    <select id="user_locationID" name="user[locationID]">
      <option value="1">Oakland</option>
      <option value="2">Richmond</option>
      <option value="3">Antioch</option>
      <option value="4">Bay Point</option>
    </select>
  </div>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>

<%= link_to 'Back', users_path %>
