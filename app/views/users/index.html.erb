<% if user_at_least_case_manager? %>
<h2>All Donors</h2>
<table id="donors" class="table table-striped">
      <% @donors.each do |user| %>
      <tr>
        <td>
		<strong>Name:&nbsp;</strong><%= user.firstname%>&nbsp;<%= user.lastname %><br />
		<strong>Email:&nbsp;</strong><%= user.email %><br />
       		<strong>Location:&nbsp;</strong><%= user.get_location %><br />
                <% if user_at_least_manager? %>
                     <%= link_to "Delete Donor", user, :id=>"user_#{user.id}" ,:class=> "btn btn-danger btn-mini", confirm: 'Are you sure you want to delete this donor?', method: :delete %>
                <% end %>        
        </td> 
      </tr>
      <% end %>
</table>
<% end %>

