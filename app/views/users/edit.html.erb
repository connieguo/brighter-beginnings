<h1>Edit Your Profile</h1><br />

<%= form_for(@user) do |f| %>
  <div class="field">
    <strong><%= f.label :phone %></strong>
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <strong><%= f.label :organization %></strong>
    <%= f.text_field :organization %>
  </div>
  <div class="field">
    <strong><%= f.label :address_1 %></strong>
    <%= f.text_field :address_1 %>
  </div>
  <div class="field">
    <strong><%= f.label :address_2 %></strong>
    <%= f.text_field :address_2 %>
  </div>
  <div class="field">
    <strong><%= f.label :city %></strong>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <strong><%= f.label :state %></strong>
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <strong><%= f.label :zipcode %></strong>
    <%= f.text_field :zipcode %>
  </div>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>
